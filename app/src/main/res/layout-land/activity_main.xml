<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/grid"
        app:layout_constraintTop_toTopOf="@id/grid" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintTop_toBottomOf="@id/calculate"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/calculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintTop_toTopOf="@id/grid"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/grid"
        app:layout_constraintEnd_toStartOf="@id/grid">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/historyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_history" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/c"
            android:textColor="@color/red"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/square"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/square"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/percent"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/percent"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/split"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/split"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/seven"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/eight"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/nine"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/compute"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/compute"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/four"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/five"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/six"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minus"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/minus"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/one"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/two"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/three"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/plus"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nil"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/nil"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dot"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/dot"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle"
            android:text="@string/equal"
            android:textColor="@color/green"
            android:textSize="30sp" />

    </GridLayout>

    <ScrollView
        android:id="@+id/historyLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/grid">

        <TextView
            android:id="@+id/historyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>