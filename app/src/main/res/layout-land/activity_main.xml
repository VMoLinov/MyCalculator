<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/nil"
        android:layout_height="@dimen/nil"
        android:adjustViewBounds="true"
        android:background="@color/black"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/grid"
        app:layout_constraintTop_toTopOf="@id/grid" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintTop_toBottomOf="@id/calculate"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintTop_toTopOf="@id/grid"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/grid"
        app:layout_constraintEnd_toStartOf="@id/grid">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/historyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_history" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/c"
            style="@style/MyButton"
            android:text="@string/c"
            android:textColor="@color/red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/square"
            style="@style/MyButton"
            android:text="@string/square" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/percent"
            style="@style/MyButton"
            android:text="@string/percent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/split"
            style="@style/MyButton"
            android:text="@string/split" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/MyButton"
            android:text="@string/seven" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/MyButton"
            android:text="@string/eight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/MyButton"
            android:text="@string/nine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/compute"
            style="@style/MyButton"
            android:text="@string/compute" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            style="@style/MyButton"
            android:text="@string/four" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            style="@style/MyButton"
            android:text="@string/five" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            style="@style/MyButton"
            android:text="@string/six" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus"
            style="@style/MyButton"
            android:text="@string/minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            style="@style/MyButton"
            android:text="@string/one" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            style="@style/MyButton"
            android:text="@string/two" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            style="@style/MyButton"
            android:text="@string/three" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus"
            style="@style/MyButton"
            android:text="@string/plus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nil"
            style="@style/MyButton"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="@string/nil" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot"
            style="@style/MyButton"
            android:text="@string/dot" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equal"
            style="@style/MyButton"
            android:text="@string/equal"
            android:textColor="@color/green" />

    </GridLayout>

    <ScrollView
        android:id="@+id/historyLayout"
        android:layout_width="@dimen/nil"
        android:layout_height="@dimen/nil"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/grid">

        <TextView
            android:id="@+id/historyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeButton" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>